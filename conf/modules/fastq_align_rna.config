/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/


process {

    withName: 'CAT_FASTQ' {
        publishDir = [
            path: { "${params.outdir}/fastq" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: false
        ]
    }

}

    //
    // Transcript quantification
    //

process {

    withName: '.*:FASTQ_ALIGN_RNA:STAR_ALIGN_SALMON' {
        ext.when   = { ( params.rna_quant.contains('star_salmon') ) }
        ext.prefix = { "${meta.id}.salmon" }
        ext.args   = [ "",
        "--quantMode TranscriptomeSAM",
        "--readFilesCommand zcat",
        "--twopassMode Basic",
        "--runRNGseed 0",
        "--outFilterMultimapNmax 20",
        "--alignSJDBoverhangMin 1",
        "--outSAMattributes NH HI AS NM MD",
        "--quantTranscriptomeBan Singleend",
        "--outSAMstrandField intronMotif",
        "--outSAMtype BAM Unsorted",
        "--outReadsUnmapped None",
        "--outSAMunmapped Within",
        ].join(' ').trim()
        publishDir = [
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.bam",
                // Save bam if save mapped, save as bam and single BAM per file.
                enabled: false // do not want to save unsorted transcriptome bams
            ],
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.tab",
                // Save bam if save mapped, save as bam and single BAM per file.
                enabled: false // junctions not needed for salmon
            ],
            [
                path: { "${params.outdir}/reports/" },
                mode: params.publish_dir_mode,
                pattern: "*.log",
                saveAs: { ( params.rna_quant.contains('star_salmon') ) ? "star/${meta.id}/${it}" : null }
            ]
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_SALMON:SAMTOOLS_SORT' {
        ext.when   = { params.rna_quant.contains('star_salmon') }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bam",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_SALMON:SAMTOOLS_INDEX' {
        ext.when   = { params.rna_quant.contains('star_salmon') }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bai",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_SALMON:BAM_STATS_SAMTOOLS:SAMTOOLS_STATS' {
        ext.when   = { params.rna_quant.contains('star_salmon') }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.stats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_SALMON:BAM_STATS_SAMTOOLS:SAMTOOLS_FLAGSTAT' {
        ext.when   = { params.rna_quant.contains('star_salmon') }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.flagstat"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_SALMON:BAM_STATS_SAMTOOLS:SAMTOOLS_IDXSTATS' {
        ext.when   = { params.rna_quant.contains('star_salmon') }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.idxstats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:CONVERT_SALMON_BAM' {
        ext.when   = { !params.save_output_as_bam && params.save_mapped }
        ext.prefix = { "${meta.id}.salmon.${meta.bam_type}" }
        publishDir = [
            path: { "${params.outdir}/preprocessing" },
            mode: params.publish_dir_mode,
            pattern: "*.{cram,crai}",
            saveAs: { ( !params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

}

    //
    // STAR FUSION
    //

process {

    withName: '.*:FASTQ_ALIGN_RNA:STAR_ALIGN_STARFUSION' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        ext.args   = [ "",
        "--twopassMode Basic",
        "--outReadsUnmapped None",
        "--readFilesCommand zcat",
        "--outSAMtype BAM Unsorted",
        "--outSAMstrandField intronMotif",
        "--outSAMunmapped Within",
        "--chimSegmentMin 12",
        "--chimJunctionOverhangMin 8",
        "--chimOutJunctionFormat 1",
        "--alignSJDBoverhangMin 10",
        "--alignMatesGapMax 100000",
        "--alignIntronMax 100000",
        "--alignSJstitchMismatchNmax 5 -1 5 5",
        "--chimMultimapScoreRange 3",
        "--chimScoreJunctionNonGTAG -4",
        "--chimMultimapNmax 20",
        "--chimNonchimScoreDropMin 10",
        "--peOverlapNbasesMin 12",
        "--peOverlapMMp 0.1",
        "--alignInsertionFlush Right",
        "--alignSplicedMateMapLminOverLmate 0",
        "--alignSplicedMateMapLmin 30"
        ].join(' ').trim()
        publishDir = [
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.bam",
                // Save bam if save mapped, save as bam and single BAM per file.
                enabled: false // do not want to save unsorted bams
            ],
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.tab",
                // Save bam if save mapped, save as bam and single BAM per file.
                saveAs: { ( params.rna_fusion.contains('star_fusion') && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
            ],
            [
                path: { "${params.outdir}/reports/" },
                mode: params.publish_dir_mode,
                pattern: "*.Log.*",
                saveAs: { ( params.rna_fusion.contains('star_fusion') ) ? "star/${meta.id}/${it}" : null }
            ]
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_STARFUSION:SAMTOOLS_SORT' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bam",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_STARFUSION:SAMTOOLS_INDEX' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bai",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_STARFUSION:BAM_STATS_SAMTOOLS:SAMTOOLS_STATS' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.stats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_STARFUSION:BAM_STATS_SAMTOOLS:SAMTOOLS_FLAGSTAT' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.flagstat"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_STARFUSION:BAM_STATS_SAMTOOLS:SAMTOOLS_IDXSTATS' {
        ext.when   = { params.rna_fusion.contains('star_fusion') }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.idxstats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:CONVERT_STARFUSION_BAM' {
        ext.when   = { !params.save_output_as_bam && params.save_mapped }
        ext.prefix = { "${meta.id}.starfusion" }
        publishDir = [
            path: { "${params.outdir}/preprocessing" },
            mode: params.publish_dir_mode,
            pattern: "*.{cram,crai}",
            saveAs: { ( !params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

}

    //
    // STAR ARRIBA
    //

process {

    withName: '.*:FASTQ_ALIGN_RNA:STAR_ALIGN_ARRIBA' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        ext.args   = [ "",
        "--readFilesCommand zcat",
        "--outSAMtype BAM Unsorted",
        "--outSAMunmapped Within",
        "--outBAMcompression 0",
        "--outFilterMultimapNmax 50",
        "--peOverlapNbasesMin 10",
        "--alignSplicedMateMapLminOverLmate 0.5",
        "--alignSJstitchMismatchNmax 5 -1 5 5",
        "--chimSegmentMin 10",
        "--chimOutType WithinBAM HardClip",
        "--chimJunctionOverhangMin 10",
        "--chimScoreDropMax 30",
        "--chimScoreJunctionNonGTAG 0",
        "--chimScoreSeparation 1",
        "--chimSegmentReadGapMax 3",
        "--chimMultimapNmax 50"
        ].join(' ').trim()
        publishDir = [
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.bam",
                // Save bam if save mapped, save as bam and single BAM per file.
                enabled: false // do not want to save unsorted bams
            ],
            [
                path: { "${params.outdir}/preprocessing/" },
                mode: params.publish_dir_mode,
                pattern: "*.tab",
                // Save bam if save mapped, save as bam and single BAM per file.
                enabled: false // junctions not needed for arriba
            ],
            [
                path: { "${params.outdir}/reports/" },
                mode: params.publish_dir_mode,
                pattern: "*.Log.*",
                saveAs: { ( params.rna_fusion.contains('arriba') ) ? "star/${meta.id}/${it}" : null }
            ]
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_ARRIBA:SAMTOOLS_SORT' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bam",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_ARRIBA:SAMTOOLS_INDEX' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/preprocessing/" },
            mode: params.publish_dir_mode,
            pattern: "*.bai",
            saveAs: { ( params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_ARRIBA:BAM_STATS_SAMTOOLS:SAMTOOLS_STATS' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.stats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_ARRIBA:BAM_STATS_SAMTOOLS:SAMTOOLS_FLAGSTAT' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.flagstat"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:SORT_STATS_ARRIBA:BAM_STATS_SAMTOOLS:SAMTOOLS_IDXSTATS' {
        ext.when   = { params.rna_fusion.contains('arriba') }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/reports/samtools/${meta.id}" },
            mode: params.publish_dir_mode,
            pattern: "*.idxstats"
        ]
    }

    withName: '.*:FASTQ_ALIGN_RNA:CONVERT_ARRIBA_BAM' {
        ext.when   = { !params.save_output_as_bam && params.save_mapped }
        ext.prefix = { "${meta.id}.arriba" }
        publishDir = [
            path: { "${params.outdir}/preprocessing" },
            mode: params.publish_dir_mode,
            pattern: "*.{cram,crai}",
            saveAs: { ( !params.save_output_as_bam && params.save_mapped ) ? "mapped/${meta.id}/${it}" : null }
        ]
    }

}
